<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    android:paddingBottom="@dimen/drawer_grouping_padding"
    android:paddingTop="@dimen/drawer_grouping_padding">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/drawer_item_height">

        <TextView
            android:id="@+id/footer_text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:clickable="true"
            android:onClick="footerClick"
            android:paddingLeft="@dimen/drawer_text_without_icon"
            android:paddingRight="@dimen/drawer_right"
            android:text="About"
            android:textColor="@color/text"
            android:textSize="14sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/drawer_item_height">

        <TextView
            android:id="@+id/footer_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:clickable="true"
            android:onClick="footerClick"
            android:paddingLeft="@dimen/drawer_text_without_icon"
            android:paddingRight="@dimen/drawer_right"
            android:text="Settings"
            android:textColor="@color/text"
            android:textSize="14sp" />

    </RelativeLayout>

</LinearLayout>