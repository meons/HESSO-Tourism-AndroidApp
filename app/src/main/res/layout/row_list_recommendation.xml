<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16.0dip"
        android:layout_marginTop="8.0dip"
        android:layout_marginRight="16.0dip"
        android:layout_marginBottom="8.0dip"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="2.0dip"
        app:contentPadding="16.0dip">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:id="@id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary"
                android:text="Recommendation" />
            <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:id="@+id/libraryCreator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_secondary"
                android:text="Recommendation message" />
        </LinearLayout>
        <ImageButton
            android:layout_gravity="center|right"
            android:id="@+id/infoButton"
            android:background="?selectableItemBackground"
            android:padding="13.0dip"
            android:layout_width="50.0dip"
            android:layout_height="50.0dip"
            android:textColorHint="@color/accent_color"
            android:src="@drawable/ic_information_grey600_24dp"
            android:scaleType="centerInside" />
    </android.support.v7.widget.CardView>
</LinearLayout>