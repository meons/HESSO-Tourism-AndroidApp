<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@+id/background"
    android:background="@color/tutorial_background"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:orientation="vertical"
        android:id="@+id/swipe_tut"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout android:orientation="vertical"
            android:id="@+id/pocket1"
            android:paddingTop="32.0dip"
            android:layout_width="fill_parent"
            android:layout_height="200.0dip"
            android:layout_alignParentBottom="true">
            <TextView android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textSize="22.0sp"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32.0dip"
                android:text="Select your Tourist Office" />
            <TextView android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32.0dip"
                android:layout_marginTop="8.0dip"
                android:layout_marginRight="72.0dip"
                android:text="Select the tourist office where you fit in by scrolling down."
                android:alpha="0.8" />
        </LinearLayout>
        <ImageView
            android:layout_width="240.0dip"
            android:layout_height="270.0dip"
            android:src="@drawable/tut_swipe"
            android:layout_above="@id/pocket1"
            android:layout_centerHorizontal="true" />
        <View
            android:background="@drawable/shadow_horizontal_inverted"
            android:layout_width="fill_parent"
            android:layout_height="5.0dip"
            android:layout_above="@id/pocket1" />
    </RelativeLayout>
    <RelativeLayout android:orientation="vertical"
        android:id="@+id/swipe_tut2"
        android:visibility="visible" android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout android:orientation="vertical"
            android:id="@+id/pocket2"
            android:paddingTop="32.0dip"
            android:layout_width="fill_parent"
            android:layout_height="200.0dip"
            android:layout_alignParentBottom="true">
            <TextView android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textSize="22.0sp"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32.0dip"
                android:text="Answer the quiz" />
            <TextView android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32.0dip"
                android:layout_marginTop="8.0dip"
                android:layout_marginRight="72.0dip"
                android:text="Simply choose your answer by typing the correct one on the list. It will automatically pass to next question." android:alpha="0.8" />
        </LinearLayout>
        <ImageView android:id="@+id/swipe_image"
            android:layout_width="240.0dip"
            android:layout_height="270.0dip"
            android:src="@drawable/tut_info"
            android:layout_above="@+id/pocket2"
            android:layout_centerHorizontal="true" />
        <View android:background="@drawable/shadow_horizontal_inverted"
            android:layout_width="fill_parent"
            android:layout_height="5.0dip"
            android:layout_above="@+id/pocket2" />
    </RelativeLayout>
    <RelativeLayout android:orientation="vertical"
        android:id="@+id/swipe_tut3"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/pocket3"
            android:paddingTop="32.0dip"
            android:layout_width="fill_parent"
            android:layout_height="200.0dip"
            android:layout_alignParentBottom="true">
            <TextView android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textSize="22.0sp"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32.0dip"
                android:text="A Widget for your taste" />
            <TextView android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32.0dip"
                android:layout_marginTop="8.0dip"
                android:layout_marginRight="72.0dip"
                android:text="Doesn't matter if you're a minimialistic person or a power user, Simple Weather comes with the right widget for you" android:alpha="0.8" />
        </LinearLayout>
        <ImageView
            android:layout_width="220.0dip"
            android:layout_height="310.0dip"
            android:src="@drawable/tut_widget"
            android:layout_above="@id/pocket3"
            android:layout_centerHorizontal="true" />
        <View
            android:background="@drawable/shadow_horizontal_inverted"
            android:layout_width="fill_parent"
            android:layout_height="5.0dip"
            android:layout_above="@id/pocket3" />
    </RelativeLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/swipe_tut4"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <TextView
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All Done!"
            android:fontFamily="sans-serif-thin" />
        <ImageView
            android:layout_gravity="center_horizontal"
            android:layout_width="150.0dip"
            android:layout_height="150.0dip"
            android:layout_marginTop="32.0dip"
            android:src="@drawable/tut_widget" />
        <TextView
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32.0dip"
            android:text="Have fun"
            android:fontFamily="sans-serif-thin" />
        <TextView
            android:textColor="@color/color_community"
            android:id="@+id/error_location"
            android:background="?selectableItemBackground"
            android:padding="16.0dip"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16.0dip"
            android:text="Enable Location Service!" />
    </LinearLayout>
</FrameLayout>