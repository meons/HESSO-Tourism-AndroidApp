<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/header_image_mountains" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:background="#50000000" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/drawer_grouping_padding"
        android:paddingLeft="@dimen/drawer_left"
        android:paddingRight="@dimen/drawer_right"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="@dimen/drawer_top">

        <ImageButton
            android:id="@+id/image_button_reset_session"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="end|top|center"
            android:background="@drawable/ic_replay_white_36dp"/>
        <LinearLayout
            android:id="@+id/headerText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/drawer_header_text"

            android:layout_gravity="start|bottom|center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_view_reference"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:textSize="21sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/reference_description"
                android:textColor="#ffffff"
                android:textSize="14sp" />

        </LinearLayout>

    </FrameLayout>

</FrameLayout>